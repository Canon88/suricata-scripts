<group name="suricata,ids,">

    <!-- Defind ECS Rules -->
    <!-- ID: 86600 - 86699 -->
    <rule id="86610" level="0">
        <decoded_as>normalized_json</decoded_as>
        <field name="@timestamp">\.+</field>
        <field name="event.kind">\.+</field>
        <description>Suricata messages</description>
    </rule>

    <rule id="86611" level="3">
        <if_sid>86610</if_sid>
        <field name="event.kind">^alarm$</field>
        <description>Suricata: Alert - $(rule.name)</description>
        <options>no_log</options>
    </rule>

</group>